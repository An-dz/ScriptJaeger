{
	"name": "ScriptJäger",
	"version": "0.2.2",
	"author": {
		"name": "André Zanghelini (An_dz)",
		"url": "https://github.com/An-dz"
	},
	"description": "Die Erweiterung für den Jägermeister! Control which scripts, frames & websocket connections to load per webpage.",
	"homepage_url": "https://github.com/An-dz",

	"icons": {
		"128": "images/jaegerhut128.png",
		"48": "images/jaegerhut48.png",
		"16": "images/jaegerhut16.png"
	},
	"options_page": "prefs.html",

	"background": {
		"scripts": [
			"background.js"
		]
	},

	"browser_action": {
		"default_icon": {
			"19": "images/undefined19.png",
			"38": "images/undefined38.png"
		},
		"default_title": "ScriptJäger",
		"default_popup": "popup.html"
	},

	"permissions": [
		"alarms",
		"notifications",
		"tabs",
		"storage",
		"webNavigation",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],

	"manifest_version": 2
}
